<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:background="@drawable/gv_item_style"
        >

    <ImageView
        android:id="@+id/iv_album_cover_item"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="fitCenter"
        android:padding="1dp"
        android:layout_centerHorizontal="true"
        tools:background="@drawable/defcover"
         />
	<LinearLayout 
	      	android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_below="@id/iv_album_cover_item"
	        android:baselineAligned="false"
	        android:orientation="horizontal"
            android:background="@drawable/gv_bgnd">
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_weight="0.8"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
            >
	
	        <TextView
	            android:id="@+id/tv_artist_item"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:singleLine="true"
	            android:layout_gravity="left"
                android:paddingLeft="7dp"
                android:paddingTop="5dp"
                android:textColor="#ffffff"/>
	
	
	        <TextView
	            android:id="@+id/tv_song_name_item"
	            android:singleLine="true"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:layout_gravity="left"
                android:paddingLeft="7dp"
                android:textColor="#ffffff"/>
	     
	        <TextView
	            android:id="@+id/tv_duration_item"
	            android:singleLine="true"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:layout_gravity="left"
                android:paddingLeft="7dp"
                android:paddingBottom="5dp"
                android:textColor="#ffffff"/>
	
	        
	    </LinearLayout>
	 	<LinearLayout 
	            android:layout_width="0dp"
	        	android:layout_weight="0.2"
	        	android:layout_height="match_parent"
	        	>
	            
		       <ImageView
    	        	android:id="@+id/btn_add_to_favorite_item"
        	    	android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:background="@drawable/ic_add_to_favorites"
                    android:layout_gravity="center"

            		/>
<!--		       <ImageView
		           	android:id="@+id/btn_remove_from_favorites"
		           	android:layout_width="30dp"
            	   	android:layout_height="30dp"
            		android:background="@drawable/ic_remove"
            	   	android:gravity="center_vertical"
            	   	/> -->
	        </LinearLayout>
	</LinearLayout>
</RelativeLayout>